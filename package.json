    "postinstall": "lerna bootstrap --no-ci && lerna run --parallel clean && npm run build",
    "gen:ext": "hygen extension new"
  },
  "devDependencies": {
    "hygen": "^6.1.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2"
  }
}
