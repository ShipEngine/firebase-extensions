{
  "name": "shipengine-firebase-extensions",
  "private": true,
  "author": "ShipEngine (https://shipengine.com)",
  "scripts": {
    "common": "yarn workspace shipengine-firebase-common",
    "format-logs": "cut -c 31-",
    "format": "prettier --write \"**/*.{js,md,yml,ts,json,yaml}\" --loglevel silent",
    "lint": "prettier --list-different \"**/*.{js,md,yml,ts,json,yaml}\"",
    "clean": "yarn workspaces foreach -pv run clean | yarn format-logs",
    "build": "yarn workspaces foreach -pvi run build | yarn format-logs",
    "test": "yarn workspaces foreach -v run test | yarn format-logs",
    "postinstall": "yarn run clean && yarn run build",
    "gen:ext": "hygen extension new"
  },
  "devDependencies": {
    "@types/is": "^0.0.21",
    "firebase-tools": "^9.17.0",
    "hygen": "^6.1.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "is_js": "^0.9.0"
  },
  "workspaces": [
    "libs/*",
    "extensions/*/functions"
  ],
  "packageManager": "yarn@3.0.2"
}
